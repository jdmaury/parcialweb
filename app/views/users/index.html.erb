<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>UserName</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Imagen</th>
      <th colspan="3">Acciones</th>
      
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
     
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= image_tag(user.profile.url(:mini)) %></td>
        <td><%= link_to 'Show', user %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New User', new_user_path , class: :button%>
<%end%>
